
@{
    ViewBag.Title = "ShowImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Booking.Models.ImageModels>

<h2 style="text-align:center; margin-bottom:30px">Fotografije</h2>

<div class="row">
    @{
        foreach (var image in Model)
        {
            <div class="col-lg-3" style="margin:20px">
                <img width="300" height="300" src="@Url.Content(image.ImagePath)" />
                <div style="margin-top: 20px; text-align:center; font-weight:bold;"> @image.Title </div>
            </div>

        }
    }
</div>


